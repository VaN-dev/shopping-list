{% extends ':default:layout.html.twig' %}

{% block content %}
    <h1>Liste de courses du {{ shoppingList.createdAt | date('d/m/Y') }}</h1>

    <div class="row">
        <div class="col-xs-12">
            <table class="table">
                <thead>
                <tr>
                    <th>Recette</th>
                    <th>Personnes</th>
                </tr>
                </thead>
                <tbody>
                {% for recipe in shoppingList.recipes %}
                    <tr>
                        <td><img src="{{ recipe.recipe.image }}" alt="" width="100"> {{ recipe.recipe.name }}</td>
                        <td>{{ recipe.people }}</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>

    <a href="{{ path('app.shopping_list.update', {'id': shoppingList.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-edit"></span> Modifier</a>
    <a href="{{ path('app.shopping_list.print_ingredients', {'id': shoppingList.id}) }}" class="btn btn-default"><span class="glyphicon glyphicon-print"></span> Imprimer les ingr√©dients</a>
{% endblock content %}