{% extends ':default:layout.html.twig' %}

{% block content %}

    <div class="container-fluid">

        <h1>Profil</h1>

        <div class="row">
            <div class="col-xs-12 col-sm-3">
                <div class="c-panel widget text-center">
                    <img src="{{ user.avatar }}" alt="" class="widget__img--circle" width="100">
                    <h2>{{ user.username }}</h2>
                </div>
            </div>
            <div class="col-xs-12 col-sm-9">
                <h2>Ses recettes</h2>

                <div class="row">
                    {% for recipe in recipes %}
                        <div class="col-xs-12 col-sm-6 col-md-4">
                            {% include '@App/Recipe/widgets/recipe-user.html.twig' %}
                        </div>
                    {% else %}
                        <div class="col-xs-12">Aucune recette actuellement.</div>
                    {% endfor %}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock content %}