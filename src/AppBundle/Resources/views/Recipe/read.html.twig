{% extends ':default:layout.html.twig' %}

{% block content %}
    <h1>{{ recipe.name }}</h1>

    <div class="row">
        <div class="col-xs-12">

            <ul>
                {% for ingredient in recipe.ingredients %}
                    <li>{{ ingredient.ingredient.name }}, {{ ingredient.quantity ~ ingredient.unit }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock content %}