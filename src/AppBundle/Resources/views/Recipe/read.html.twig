{% extends ':default:layout.html.twig' %}

{% block content %}
    <div class="container-fluid">

        <h1>{{ recipe.name }}</h1>

        <div class="row">
            <div class="col-xs-12">

                <div class="c-panel c-panel--default">
                    <div class="c-panel__heading">
                        <h2 class="c-panel__title">Ingr√©dients</h2>
                    </div>
                    <div class="c-panel__body">
                        <ul class="list-group">
                            {% for ingredient in recipe.ingredients %}
                                <li class="list-group-item">
                                    <span class="badge badge-primary">{{ ingredient.quantity ~ ingredient.unit }}</span>
                                    {{ ingredient.ingredient.name }}
                                </li>
                            {% endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock content %}