<div class="col-sm-6">
    <div class="c-panel w-recipe">
        {% if recipe.vars.data is not null %}<img class="w-recipe__img w-recipe__img--responsive" src="{{ recipe.vars.data.recipe.webPath }}" alt="">{% endif %}
        <div class="c-panel__body w-recipe__body">
            {% if recipe.vars.data is not null %}{{ recipe.vars.data.recipe.name }}{% endif %}
            {{ form_row(recipe.people, {'attr': {'class': 'touchspin'}}) }}
            <a class="btn btn-default delete-recipe-trigger" href="#" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>
            {{ form_row(recipe.recipe) }}
        </div>
    </div>
</div>

