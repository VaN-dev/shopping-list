<div class="col-sm-4 recipe">
    <div class="media" style="border: 1px solid #ddd; padding: 10px;">
        <div class="media-left">
            <a href="#">
                {% if recipe.vars.data is not null %}<img class="media-object" src="{{ recipe.vars.data.recipe.webpath }}" alt="" width="150">{% endif %}
            </a>
        </div>
        <div class="media-body">
            <h4 class="media-heading">{% if recipe.vars.data is not null %}{{ recipe.vars.data.recipe.name }}{% endif %}</h4>
            {{ form_row(recipe.people) }}
            <a class="btn btn-default delete-recipe-trigger" href="#" role="button"><span class="glyphicon glyphicon-trash" aria-hidden="true"></span></a>

            {{ form_row(recipe.recipe) }}
        </div>
    </div>
</div>