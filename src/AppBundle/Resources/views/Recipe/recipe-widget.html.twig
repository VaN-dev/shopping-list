<div class="col-sm-4 recipe">
    <div class="media" style="border: 1px solid #ddd; padding: 10px;">
        <div class="media-left">
            <a href="#">
                <img class="media-object" src="{{ recipe.webpath }}" alt="" width="150">
            </a>
        </div>
        <div class="media-body">
            <h4 class="media-heading"><a href="{{ path('app.recipe.read', {'id': recipe.id}) }}">{{ recipe.name }}</a></h4>
            {{ recipe.people }} personnes<br />
            par <a href="{{ path('app.user.details', {'id': recipe.user.id}) }}">{{ recipe.user.username }}</a>
        </div>
    </div>
</div>