{% extends ':default:layout.html.twig' %}

{% block content %}
    <h1>Recettes</h1>

    <div class="row">
        <div class="col-xs-12">

            <h2>Que souhaitez-vous faire ?</h2>

            <a href="{{ path('app.recipe.create') }}" class="btn btn-primary">Ajouter une recette</a>

            <h2>Vos recettes</h2>
            <ul>
                {% for recipe in receipts %}
                    <li>
                        {{ recipe.name }}
                        <a href="{{ path('app.recipe.read', {'id': recipe.id}) }}">voir</a> -
                        <a href="{{ path('app.recipe.update', {'id': recipe.id}) }}">modifier</a>
                    </li>
                {% endfor %}
            </ul>

        </div>
    </div>
{% endblock content %}