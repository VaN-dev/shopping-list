{% extends ':default:layout.html.twig' %}

{% block content %}
    <div class="container-fluid">

        <h1>Bienvenue sur votre tableau de bord, {{ app.user.username }}</h1>

        <div class="row">
            <div class="col-xs-12 col-sm-9">
                <h2>Actions rapides</h2>

                <div class="row">
                    <div class="col-xs-12 col-sm-3">
                        <a class="btn btn-block btn-default">
                            <i class="fa fa-cutlery"></i> Nouvelle recette
                        </a>
                    </div>
                    <div class="col-xs-12 col-sm-3">
                        <a class="btn btn-block btn-default">
                            <i class="fa fa-list"></i> Nouvelle liste
                        </a>
                    </div>
                </div>

                <h2>Les dernières recettes ajoutées</h2>

                <div class="row">
                    <div class="col-xs-12">

                        <div class="row">
                            {% for recipe in recipes %}
                                <div class="col-xs-12 col-sm-4">
                                    {% include '@App/Recipe/widgets/shoppinglist-recipe-simple.html.twig' %}
                                </div>
                            {% endfor %}
                        </div>

                    </div>
                </div>
            </div>
            <div class="col-xs-12 col-sm-3">
                <h2>En cours</h2>
            </div>
        </div>
    </div>
{% endblock content %}